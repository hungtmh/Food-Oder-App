<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phản hồi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Filter tabs -->
    <LinearLayout
        android:id="@+id/feedbackFilterBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerFeedback">

        <Button
            android:id="@+id/btnFilterAll"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_category_selected"
            android:text="Tất cả"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnFilterUnread"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bg_category_normal"
            android:text="Mới"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnFilterRead"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/bg_category_normal"
            android:text="Đã đọc"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- Feedback list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeedbacks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/feedbackFilterBar"
        app:layout_constraintBottom_toTopOf="@id/adminBottomNav" />

    <!-- Empty -->
    <TextView
        android:id="@+id/tvFeedbackEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có phản hồi nào"
        android:textColor="@color/text_hint"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/feedbackFilterBar"
        app:layout_constraintBottom_toTopOf="@id/adminBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Nav -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/adminBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/admin_bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
