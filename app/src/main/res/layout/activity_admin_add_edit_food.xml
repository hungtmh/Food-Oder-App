<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvAddEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm món ăn mới"
            android:textColor="@color/primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Image -->
        <ImageView
            android:id="@+id/imgFoodPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_search_bar"
            android:contentDescription="Ảnh món" />

        <EditText
            android:id="@+id/edtImageUrl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:hint="URL hình ảnh"
            android:inputType="textUri"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <!-- Name -->
        <EditText
            android:id="@+id/edtFoodName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Tên món ăn *"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <!-- Price -->
        <EditText
            android:id="@+id/edtFoodPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Giá tiền (VNĐ) *"
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <!-- Discount -->
        <EditText
            android:id="@+id/edtDiscount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Giảm giá (%)"
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <!-- Category Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Danh mục:"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edit_text"
            android:paddingHorizontal="8dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/edtFoodDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_edit_text"
            android:gravity="top"
            android:hint="Mô tả chi tiết"
            android:inputType="textMultiLine"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textSize="14sp" />

        <!-- Checkboxes -->
        <CheckBox
            android:id="@+id/cbPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Món phổ biến"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cbRecommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Món gợi ý"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cbAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Còn bán"
            android:checked="true"
            android:textSize="14sp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveFood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_button_primary"
            android:text="Lưu món ăn"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
