<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Search bar -->
    <LinearLayout
        android:id="@+id/orderSearchBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_search_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerOrders">

        <EditText
            android:id="@+id/edtOrderSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Tìm mã đơn, tên khách..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnOrderSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <!-- Status filter HorizontalScrollView -->
    <HorizontalScrollView
        android:id="@+id/orderFilterScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/orderSearchBar">

        <LinearLayout
            android:id="@+id/orderFilterBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnStatusAll"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_category_selected"
                android:text="Tất cả"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btnStatusPending"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_category_normal"
                android:text="Chờ xác nhận"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btnStatusConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_category_normal"
                android:text="Đang xử lý"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btnStatusDelivered"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_category_normal"
                android:text="Hoàn thành"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btnStatusCancelled"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/bg_category_normal"
                android:text="Đã hủy"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Stats summary -->
    <LinearLayout
        android:id="@+id/orderStatsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/orderFilterScroll">

        <TextView
            android:id="@+id/tvOrderStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng: 0 đơn"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Order list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAdminOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/orderStatsBar"
        app:layout_constraintBottom_toTopOf="@id/adminBottomNav" />

    <TextView
        android:id="@+id/tvOrderEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có đơn hàng nào"
        android:textColor="@color/text_hint"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/orderStatsBar"
        app:layout_constraintBottom_toTopOf="@id/adminBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB thống kê doanh thu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_chart"
        android:contentDescription="Thống kê doanh thu"
        app:backgroundTint="@color/primary"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/adminBottomNav" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/adminBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/admin_bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
